@using cfares.Global
@using cfares.site.modules.com.application
@model cfaresv2.Models.LoginModel


@{
    ViewBag.Title = "Log On";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span10 offset1">
		<h1>Welcome!</h1>
	</div>
</div>
<div class="row-fluid">

    <div class="span8 offset2">
    <p>Log in to manage your account, modify or cancel your reservations, and have your invitations re-sent to your inbox!</p>
    </div><br/>

	<div class="span6 offset3">

	@using (Html.BeginForm("Index", "LogOn", new { area = "MyAccount" }, FormMethod.Post, new { id = "login", @class = "form-horizontal", style = "display: inline", action = "/Account/LogOn?ReturnUrl=" + HttpUtility.UrlEncode(Request.QueryString["ReturnUrl"]) }))
	{
		<div class="control-group">
			@Html.LabelFor(model => model.UserName, "Email:", new {@class = "control-label"})
			<div class="controls">
				@Html.TextBoxFor(model => model.UserName)
				@Html.ValidationMessageFor(model => model.UserName)
			</div>
		</div>
		<div class="control-group">
			@Html.LabelFor(model => model.Password, "Password:", new {@class = "control-label"})
			<div class="controls">
				@Html.TextBoxFor(model => model.Password, new { @type = "password" } )
                <br/><span>@Html.ActionLink( "Click here", "ForgotPassword", "LogOn" ) if you forgot your password.</span>
				@Html.ValidationMessageFor(model => model.Password)
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<label class="checkbox"> 
					@Html.CheckBoxFor(model => model.RememberMe)
					 Remember me
					@*Html.LabelFor(model => model.RememberMe)*@
					@Html.ValidationMessageFor(model => model.RememberMe)
				</label>
				<button type="submit" class="btn-large btn btn-primary">Log in</button>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">&nbsp;</label>
			<div class="controls">
				<p>&nbsp;</p>
				<p>
					
				</p>
			</div>
		</div>
	}
	</div>
</div>