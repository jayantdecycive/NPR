@using cfacore.shared.modules.com.admin
@using cfares.domain._event
@{
    Layout = "../Shared/_Layout.cshtml";
}

@*----------------------------------------------------
  Reservation System Index Page ( Template Fallback )
----------------------------------------------------*@

<div class="row-fluid">
	<div class="span10 offset1" id="intro">

		<p>Participating restaurants are hosting a special event.  To make your reservation, choose a participating city below.</p>

	</div>
</div>
<div class="row-fluid">
	<div class="span10 offset1 captionedForm">

		<p>Choose from your preferred locations:</p>
		
		<form id="yourPreferredLocations">
			<ul id="locations list">
				<li>
					<div class="overview">
						<h3 class="name">Location 1 at Cherrydale Point</h3>
						<p class="address">1544 Sample Hwy<br />Greenville, SC 29609</p>
						<div class="tools"><a href="#">view map</a></div>
					</div>
					<div class="reservationDetail">
						<div class="date">September 6, 2014</div>
						<div class="remaining">24 reservations remaining</div>
					</div>
					<div class="commands">
						<button class="btn large">Make Reservation</button>
					</div>
				</li>
			</ul>
			<div class="location">
				<h3></h3>
			</div>

		</form>
		
	</div>
</div>

