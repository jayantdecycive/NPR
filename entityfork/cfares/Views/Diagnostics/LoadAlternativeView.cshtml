@model cfares.Models.datatable.DataTableInitialization
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <title>LoadAlternativeView</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/admin-table/jquery-ui-1.8.18.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/admin-grey/jquery-ui-1.8.18.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/datajs-1.0.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery/plugins.js")" type="text/javascript"></script>   
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery/jquery.jeditable.js")" type="text/javascript"></script>  
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/datatables/KeyTable.js")" type="text/javascript"></script>    
    <script src="@Url.Content("~/Scripts/datatables/jquery.dataTables.editable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/datatables/plugins.js")" type="text/javascript"></script>    
     <script src="@Url.Content("~/Scripts/datatables/stephansTablePlugin.js")" type="text/javascript"></script>
     <script src="@Url.Content("~/Scripts/datatables/extendedDataTables.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/api/api-base.js")" type="text/javascript"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {

            var factory = extendedDataTables;
            var params = factory.createParams({
                "tableTemplate": $('#table1').get(0)
            });

            $('#table1').dataTable(params).fnSetFilteringDelay().fnSetJqUiHover();

            var params2 = factory.createParams({
                "tableTemplate": $('#table2').get(0)
            });

            $("#table2").dataTable(params2).fnSetFilteringDelay().fnSetJqUiHover();
        });
       
    </script>

</head>
<body>
    <div class='admin-table'>
        <table id='table1' class='data-table' data-useOData="false" data-sAjaxSource="@Url.Content(Model.jsonServiceAPI)" data-useOData="false">
         <thead>
            <tr>
                <th>Edit Button</th>
                <th data-column-name="var1" data-stype="numeric" bSortable="true" >Variable 1</th>
                <th data-column-name="var2"  bSortable="true">Variable 2</th>
                <th data-column-name="var3"  bSortable="true">Variable 3</th>
                
		    </tr>
         </thead>
     </table>

     <table id='table2' class='data-table' data-useOData="true" data-sAjaxSource='http://localhost:65271/DataService/Location.svc/Locations'>
        <thead>
            <tr>
                <th>Edit Button</th>
                <th data-column-name="ConceptCode" data-stype="numeric" data-bSortable="true" data-bGlobalSearchable="true" >Variable 1</th>
                <th data-column-name="Email"  data-bSortable="true" data-bGlobalSearchable="true">Variable 2</th>
                <th data-column-name="Lat"  data-bSortable="true" data-bGlobalSearchable="true">Variable 3</th>
               
		    </tr>
         </thead>
     </table>
    </div>
</body>
</html>
